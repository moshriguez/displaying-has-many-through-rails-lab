<h1><%= @doctor.name %></h1>

<p>DEPT: <%= @doctor.department %></p>

<h3>Appointments</h3>
<ul>
    <% @doctor.appointments.each do |appt| %>
        <li><%= appt.appointment_datetime.strftime("%B %-d, %Y at %k:%M") %> | <%= link_to appt.patient.name, patient_path(appt.patient) %></li>
    <% end %>
</ul>