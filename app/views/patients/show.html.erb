<h1><%= @patient.name %></h1>
<p>Age: <%= @patient.age %></p>

<h3>Appointments:</h3>

<ul>
    <% @patient.appointments.each do |appt| %>
        <li><%= appt.appointment_datetime.strftime("%B %-d, %Y at %k:%M") %> | <%= link_to appt.doctor.name, doctor_path(appt.doctor) %></li>
    <% end %>
</ul>

<%= link_to 'back to list', patients_path %>